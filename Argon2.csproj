<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>Kamron Batman</Authors>
    <Copyright>2019-2020</Copyright>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Platforms>x64</Platforms>
    <PlatformTarget>x64</PlatformTarget>
    <LangVersion>8</LangVersion>
    <AssemblyVersion>1.5.0</AssemblyVersion>
    <PackageVersion>1.5.0</PackageVersion>
    <RootNamespace>System.Security.Cryptography</RootNamespace>
    <AssemblyName>Argon2.Bindings</AssemblyName>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <Configurations>Debug;Release;Analyze</Configurations>
    <DefineConstants Condition="$(RuntimeIdentifier.StartsWith('win'))">WINDOWS</DefineConstants>
    <DefineConstants Condition="$(RuntimeIdentifier.StartsWith(`win`)) != true">UNIX</DefineConstants>
    <NoWarn>NU1603</NoWarn>
    <RuntimeIdentifiers>win-x64;ubuntu-x64;debian-x64;centos-x64;osx-x64</RuntimeIdentifiers>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="runtimes\win-x64\native\libargon2.dll">
      <Pack>true</Pack>
      <PackagePath>runtimes/win-x64/native/libargon2.dll</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\osx-x64\native\libargon2.dylib">
      <Pack>true</Pack>
      <PackagePath>runtimes/osx-x64/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\ubuntu.16-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/ubuntu.16/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\ubuntu.18-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/ubuntu.18/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\ubuntu.20-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/ubuntu.20/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\debian.9-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/debian.9/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\debian.10-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/debian.10/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\centos.7-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/centos.7/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\centos.8-x64\native\libargon2.so">
      <Pack>true</Pack>
      <PackagePath>runtimes/centos.8/native</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
